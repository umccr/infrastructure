{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "name": "aws-docker-ce-base",
    "custom_ami_name": "stackstorm-ami",
    "ssh_username": "ubuntu"
  },
  "builders": [
    {
      "name": "{{user `custom_ami_name`}}",
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "iam_instance_profile": "stackstorm_instance_profile",
      "region": "ap-southeast-2",
      "source_ami": "ami-74fa3d16",
      "instance_type": "t2.medium",
      "spot_price": "auto",
      "spot_price_auto_product": "Linux/UNIX",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_timeout": "10m",
      "ami_name": "{{user `custom_ami_name`}} {{timestamp}}",
      "ami_description": "{{user `custom_ami_name`}} AMI",
      "run_tags": {
        "ami-create": "{{user `custom_ami_name`}}"
      },
      "tags": {
        "ami": "{{user `custom_ami_name`}}"
      },
      "associate_public_ip_address": true
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "bootstrap-docker.sh",
      "destination": "/tmp/bootstrap-docker.sh"
    },
    {
      "type": "file",
      "source": "bootstrap-stackstorm.sh",
      "destination": "/tmp/bootstrap-stackstorm.sh"
    },
    {
      "type": "file",
      "source": "cleanup.sh",
      "destination": "/tmp/cleanup.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'packer' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "inline": [
        "whoami",
        "cd /tmp",
        "chmod +x bootstrap-docker.sh",
        "chmod +x bootstrap-stackstorm.sh",
        "chmod +x cleanup.sh",
        "ls -alh /tmp",
        "./bootstrap-docker.sh",
        "sleep 10",
        "./bootstrap-stackstorm.sh",
        "sleep 10",
        "./cleanup.sh"
      ]
    }
  ]
}
