{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "Service": "s3.amazonaws.com"
            },
           "Action": [
               "SQS:SendMessage"
           ],
            "Resource": "${sqs_arn}",
            "Condition": {
                "ArnEquals": { 
                    "aws:SourceArn": "${s3_primary_data_bucket_arn}" 
                }
            }
        },
        {
            "Effect": "Allow",
            "Principal": {
                "Service": "s3.amazonaws.com"
            },
           "Action": [
               "SQS:SendMessage"
           ],
            "Resource": "${sqs_arn}",
            "Condition": {
                "ArnEquals": {
                    "aws:SourceArn": "${s3_run_data_bucket_arn}"
                }
            }
        },
        {
            "Effect": "Allow",
            "Principal": {
                "Service": "s3.amazonaws.com"
            },
           "Action": [
               "SQS:SendMessage"
           ],
            "Resource": "${sqs_arn}",
            "Condition": {
                "ArnEquals": {
                    "aws:SourceArn": "${s3_oncoanalyser_arn}"
                }
            }
        },
        {
            "Effect": "Allow",
            "Principal": {
                "Service": "events.amazonaws.com"
            },
           "Action": [
                "sqs:SendMessage",
                "sqs:GetQueueAttributes",
                "sqs:GetQueueUrl"
           ],
            "Resource": "${sqs_arn}",
            "Condition": {
                "ArnEquals": {
                    "aws:SourceArn": "${icav2_pipeline_cache_to_sqs_rule_arn}"
                }
            }
        }
    ]
}