{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": "*",
            "Action": "sqs:SendMessage",
            "Resource": "${sqs_arn}",
            "Condition": {
                "ArnEquals": { 
                    "aws:SourceArn": "${s3_primary_data_bucket_arn}" 
                }
            }
        },
        {
            "Effect": "Allow",
            "Principal": "*",
            "Action": "sqs:SendMessage",
            "Resource": "${sqs_arn}",
            "Condition": {
                "ArnEquals": {
                    "aws:SourceArn": "${s3_run_data_bucket_arn}"
                }
            }
        }
    ]
}